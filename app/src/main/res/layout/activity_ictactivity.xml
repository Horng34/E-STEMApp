<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ICTActivity"
    android:background="@drawable/purplebg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="វិទ្យាសាស្ត្រកុំព្យូទ័រ"
        android:textSize="50sp"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="155dp"
            android:src="@drawable/rabit"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="តោះចាប់ផ្តើមរៀន! នៅចាំដល់ណាទៀត"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <GridLayout
        android:layout_marginLeft="0dp"
        android:layout_width="390dp"
        android:layout_height="230dp"
        android:rowCount="3"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="280dp"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/codeorg"
            android:layout_width="132dp"
            android:layout_height="145dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="195dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/codeorg"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="code.org"
                    android:textAlignment="gravity"
                    android:textColor="@color/purple_500"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/websitecard"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="195dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/web"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Website"
                    android:textAlignment="gravity"
                    android:textColor="@color/purple_500"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>
    <GridLayout
        android:layout_width="205dp"
        android:layout_height="210dp"
        android:rowCount="1"

        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="500dp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="100dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/androidcard"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="195dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/app"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Android Studio"
                    android:textColor="@color/purple_500"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>