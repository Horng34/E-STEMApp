<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/purplebg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bangers"
                android:text="E-STEM "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/purple_500"
                android:textSize="55sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imgsetting"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_format_indent_decrease_24"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"/>

        </RelativeLayout>


        <GridLayout
            android:layout_width="415dp"
            android:layout_height="550dp"
            android:rowCount="3"
            android:layout_marginLeft="0dp"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardstem"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/stemword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="មុខវិជ្ជាSTEM"
                        android:textAlignment="center"
                        android:textColor="@color/purple_500"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardsoftskill"
                android:layout_width="152dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView


                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/soft" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="ជំនាញទន់"
                        android:textAlignment="center"
                        android:textColor="@color/purple_500"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardreview"
                android:layout_width="152dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/reviewlesson" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="រំឭកមេរៀន"
                        android:textAlignment="center"
                        android:textColor="@color/purple_500"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardreminder"
                android:layout_width="152dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp">
                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/reminder" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="រំឭកដាស់តឿន"
                        android:textAlignment="center"
                        android:textColor="@color/purple_500"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardattendence"
                android:layout_width="152dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/attendence" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ស្រង់វត្តមាន"
                        android:textAlignment="center"
                        android:textColor="@color/purple_500"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardshare"
                android:layout_width="152dp"
                android:layout_height="130dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_row="0"
                        android:layout_column="5"
                        android:src="@drawable/sharing" />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="0dp"
                        android:text="ចែករំលែកចំណេះដឹង"
                        android:textColor="@color/purple_500"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </LinearLayout>




</RelativeLayout>